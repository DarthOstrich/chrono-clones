extends layout.pug

block content
  .inner
    form.form(action="/register" method="POST")
      h2 Register
      div.form-group
        label(for="email") Email
        input(type="email"
          name="email" 
          class="form-control" 
          id="email" 
          aria-describedby="emailHelp" 
          placeholder="Enter email" required)
      div.form-group
        label(for="password") Password    
        input(type="password" 
          name="password"
          class="form-control" 
          id="password" 
          placeholder="Password" 
          required)
      div.form-group
        label(for="password-confirm") Confirm Password    
        input(type="password" 
          name="password-confirm"
          class="form-control" 
          id="password-confirm" 
          placeholder="Password" 
          required)
      div.g-recaptcha(data-sitekey="6LeIKjcUAAAAANJ75NaAUIxJQpMe1rgHQ7JRrIcN")
      input.btn.btn-primary(type="submit" value="Register")