doctype html
html
  head
    //- title= `${title} | ${h.siteName}`
    title Clone Wars Chronological
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous")
    link(rel='stylesheet', href='/dist/style.css')
    //- link(rel="shortcut icon" type="image/png" href="/images/icons/doughnut.png")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    script(src="https://www.google.com/recaptcha/api.js")
  body(id=(locals.currentPath == "/" ? "index" : "app"))
    //- =JSON.stringify(locals.currentPath)
    block header
      header
        nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.justify-content-between
          a.navbar-brand(href="/") CWC
          ul.navbar-nav.justify-content-end
            if !user
              li.nav-item
                a.nav-link(href="/login") Login
              li.nav-item
                a.nav-link(href="/register") Register
            else 
              li.nav-item
                a.nav-link(href="/episodes") Episodes
              li.nav-item
                a.nav-link(href="/logout") Logout
    block messages
      if locals.flashes
        .inner
          .flash-messages
            - const categories = Object.keys(locals.flashes)
            each category in categories
              each message in flashes[category]
                .flash.alert.alert-primary(class=`flash--${category}`)
                  p.flash__text!= message
                  button.close.flash__remove(type="button" aria-label="Close" onClick="this.parentElement.remove()")
                    span(aria-hidden="true") &times;
    main.container
      block content
    script(src="/dist/App.bundle.js")
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>